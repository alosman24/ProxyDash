{
  "name": "proxy-chimp",
  "version": "1.0.0",
  "description": "ProxyChimp - A professional proxy testing application with clean dark UI",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "dev-electron-only": "cross-env NODE_ENV=development electron .",
    "dev-api": "cd ProxyTester.Api && dotnet run",
    "dev-full": "concurrently \"npm run dev-api\" \"npm run react-dev\" \"wait-on http://localhost:3000 http://localhost:5000 && cross-env NODE_ENV=development electron .\"",
    "react-dev": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "proxy",
    "tester",
    "electron",
    "react",
    "dotnet"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "build": {
    "appId": "com.yourcompany.proxytester",
    "productName": "ProxyChimp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "ProxyTester.Api/bin/Release/net9.0/publish",
        "to": "ProxyTester.Api",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}